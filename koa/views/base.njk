<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    {% block title %} <title>Title</title> {% endblock %}
    <link rel="stylesheet" href="../static/layui/css/layui.css"  media="all">
    <link rel="stylesheet" href="../static/css/base.css">
    {% block headcss %} {% endblock %}
</head>
<body>
    {% block header %}
    <header class="header layui-bg-black">
        <nav class="layui-container">
            <a href="/">首页</a>
            <a href="#">文章</a>
            <a href="#">视频</a>
            <a href="/product">购物</a>
            <div class="login">
                <a href="/login">登录</a>
                <a href="#">注册</a>
            </div>
        </nav>
    </header>
    {% endblock %}
    {% block main %}
        <div class="main layui-container">
            {% block maincon %}
                <div class="title">{{ title }}</div>
                <div class="layui-carousel" id="lunbo">
                    <div carousel-item>
                        <div>条目1</div>
                        <div>条目2</div>
                        <div>条目3</div>
                        <div>条目4</div>
                        <div>条目5</div>
                    </div>
                </div>
            {% endblock %}
        </div>
    {% endblock %}
    {% block footer %}
        <footer class="footer">
            <p>
                <a href="#">node.js</a>
                2019 ©
                <a href="#">君惜</a>
            </p>
            <p style="margin-top: 15px">
                学习 node.js demo 项目
            </p>
        </footer>
    {% endblock %}
    <script src="../static/layui/layui.js"></script>
    <script src="../static/js/vue.min.js"></script>
    <script src="../static/js/jquery.min.js"></script>
    {% block bottomjs %}
        <script>
            layui.use('carousel', function(){
                var carousel = layui.carousel;
                //建造实例
                carousel.render({
                    elem: '#lunbo'
                    ,width: '100%' //设置容器宽度
                    ,arrow: 'always' //始终显示箭头
                    // ,anim: 'updown' //切换动画方式
                });
            });
        </script>
    {% endblock %}
</body>
</html>
